<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dip" >

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_step_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_large" />

    <GridView
        android:id="@+id/gridview_step_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview_step_title"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:gravity="center"
        android:horizontalSpacing="16dip"
        android:layoutAnimation="@anim/layout_grid_fade"
        android:listSelector="@drawable/bg_blue"
        android:numColumns="4"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dip"
        android:visibility="visible" />

</RelativeLayout>