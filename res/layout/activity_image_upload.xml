<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />

            <ImageView
                android:id="@+id/imageview_top_left_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_menu_back"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_image_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/select_photos"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageview_search"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageview_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClickSearch"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip"
            android:src="@drawable/btn_search"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="45dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClickShoppingCart" >

            <ImageView
                android:id="@+id/imageview_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="10dip"
                android:src="@drawable/icon_cart" />

            <TextView
                android:id="@+id/textview_overlay_num_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageview_cart"
                android:layout_alignRight="@+id/imageview_cart"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="1dip"
                android:background="@drawable/bg_cart_items_qty"
                android:gravity="center"
                android:textColor="@color/cart_items_qty_text"
                android:textSize="@dimen/text_size_tiny" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <!-- Social Networks -->

    <RelativeLayout
        android:id="@+id/layout_social_networks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:background="#ffffff"
        android:paddingBottom="0dip"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:paddingTop="7dip" >

        <!-- Gray Layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:background="@drawable/bg_photosources" >

            <!-- Dummy Horizontal 1 -->

            <LinearLayout
                android:id="@+id/dummy_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- Phone -->

                <RelativeLayout
                    android:id="@+id/layout_phone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector_blue"
                    android:clickable="true"
                    android:onClick="onClickPhone"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageview_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_phone_60" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@+id/imageview_phone"
                        android:singleLine="true"
                        android:text="@string/phone"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <!-- Instagram -->

                <RelativeLayout
                    android:id="@+id/layout_instagram"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector_blue"
                    android:clickable="true"
                    android:onClick="onClickInstagram"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageview_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_instagram_60" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@+id/imageview_instagram"
                        android:singleLine="true"
                        android:text="@string/instagram"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <!-- Facebook -->

                <RelativeLayout
                    android:id="@+id/layout_facebook"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector_blue"
                    android:clickable="true"
                    android:onClick="onClickFacebook"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageview_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_facebook_60" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@+id/imageview_facebook"
                        android:singleLine="true"
                        android:text="@string/facebook"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Dummy Horizontal 2 -->

            <LinearLayout
                android:id="@+id/dummy_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dummy_1"
                android:orientation="horizontal" >

                <!-- Flickr -->

                <RelativeLayout
                    android:id="@+id/layout_flickr"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector_blue"
                    android:clickable="true"
                    android:onClick="onClickFlickr"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageview_flickr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_flickr_60" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_flickr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@+id/imageview_flickr"
                        android:singleLine="true"
                        android:text="@string/flickr"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <!-- Photobucket -->

                <RelativeLayout
                    android:id="@+id/layout_photobucket"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector_blue"
                    android:clickable="true"
                    android:onClick="onClickPhotobucket"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageview_photobucket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_photobucket_60" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_photobucket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@+id/imageview_photobucket"
                        android:singleLine="true"
                        android:text="@string/photobucket"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <!-- Dropbox -->

                <RelativeLayout
                    android:id="@+id/layout_dropbox"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector_blue"
                    android:clickable="true"
                    android:onClick="onClickDropbox"
                    android:padding="5dip" >

                    <ImageView
                        android:id="@+id/imageview_dropbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dropbox_60" />

                    <print.io.view.TextViewFontLight
                        android:id="@+id/textview_dropbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@+id/imageview_dropbox"
                        android:singleLine="true"
                        android:text="@string/dropbox"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Picasa - we just need Android to generate layout_picasa id inside R.java -->

    <View
        android:id="@+id/layout_picasa"
        android:layout_width="0px"
        android:layout_height="0px"
        android:visibility="gone" />

    <!-- Search -->

    <RelativeLayout
        android:id="@+id/relative_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_social_networks"
        android:background="@drawable/bg_selector"
        android:padding="10dip"
        android:visibility="gone" >

        <print.io.view.EditTextFontLight
            android:id="@+id/edittext_search1"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/bg_edit_text"
            android:inputType="text"
            android:paddingLeft="10dip"
            android:paddingRight="30dip"
            android:textColor="#595d66"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/imageview_clear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClickClearText"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="8dip"
            android:src="@drawable/icon_x" />
    </RelativeLayout>

    <!-- Grid View -->

    <print.io.view.GridViewAnim
        android:id="@+id/gridview_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_layout_search"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/layout_grid_fade"
        android:listSelector="@drawable/bg_selector_blue"
        android:numColumns="3"
        android:padding="10dip"
        android:scrollbars="none"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="16dip"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/scrollview_select_photos_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_social_networks"
        android:layout_alignRight="@+id/layout_social_networks"
        android:layout_below="@+id/layout_social_networks"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="#ffffff"
        android:scrollbars="none"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/layout_select_photos_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip" >

            <include
                android:id="@+id/singlephoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                layout="@layout/item_singlephoto"
                android:visibility="gone" />

            <include
                android:id="@+id/multiphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                layout="@layout/item_multiphoto"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/overlay_buttons" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_customize_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dip"
        android:background="@drawable/btn_green"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_arrow_right"
        android:gravity="center"
        android:onClick="onClickNext"
        android:paddingBottom="9dip"
        android:paddingLeft="15dip"
        android:paddingRight="9dip"
        android:paddingTop="9dip"
        android:text="@string/next"
        android:textColor="@color/secondary_button_text"
        android:textSize="@dimen/text_size_large" />

    <print.io.view.TextViewFontLight
        android:id="@+id/textview_pic_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_customize_product"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_blue_light"
        android:clickable="false"
        android:paddingBottom="7dip"
        android:paddingLeft="9dip"
        android:paddingRight="9dip"
        android:paddingTop="7dip"
        android:textColor="@color/primary_button_text"
        android:textSize="@dimen/text_size_normal" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Dialog Low Resolution -->

    <include
        android:id="@+id/dialog_low_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/dialog_low_resolution"
        android:clickable="true"
        android:visibility="gone" />

    <!-- Dialog Less Photos -->

    <include
        android:id="@+id/dialog_less_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/dialog_less_photos"
        android:clickable="true"
        android:visibility="gone" />

    <!-- Please try again dialog -->

    <include
        android:id="@+id/dialog_please_try_again"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/dialog_please_try_again"
        android:visibility="gone" />

    <!-- Coming Soon -->

    <include
        android:id="@+id/item_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_coming_soon"
        android:visibility="gone" />

</RelativeLayout>