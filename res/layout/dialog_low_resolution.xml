<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:clickable="true"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="14dip"
        android:background="@drawable/bg_white"
        android:paddingBottom="32dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="32dip" >

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_low_res"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/low_resolution"
            android:textColor="#5a5d66"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_low_res"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <print.io.view.ButtonFontLight
                android:id="@+id/button_no"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dip"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_light"
                android:onClick="onClickNo"
                android:padding="14dip"
                android:text="No"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <print.io.view.ButtonFontLight
                android:id="@+id/button_yes"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dip"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:onClick="onClickYes"
                android:padding="14dip"
                android:text="Yes"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
        </LinearLayout>

        <print.io.view.TextViewFontLight
            android:id="@+id/textview_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="@string/note_required"
            android:textColor="#5a5d66"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

</RelativeLayout>