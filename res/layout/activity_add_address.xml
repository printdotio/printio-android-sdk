<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_background" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClickBack"
            android:orientation="horizontal"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back_2" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_back_button"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <print.io.view.TextViewFontNormal
            android:id="@+id/textview_shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/address_form"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageview_info"
            android:src="@drawable/icon_ver_divider"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageview_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClickHelp"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip"
            android:src="@drawable/icon_question_big" />
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_titlebar"
        android:background="@color/title_bar_separator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dummy_title_separator"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <print.io.view.TextViewFontLight
                android:id="@+id/textview_add_shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/add_address"
                android:textColor="#595d66"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.ButtonFontLight
                android:id="@+id/button_pick_from_contacts"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:onClick="onClickPickFromContacts"
                android:text="@string/pick_from_contacts"
                android:textColor="@color/secondary_button_text"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_first_name"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:background="@color/bg_edit_text"
                android:hint="@string/first_name"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/edittext_last_name"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_last_name"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:background="@color/bg_edit_text"
                android:hint="@string/last_name"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/autocompletetextview_street_1"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip" >

                <print.io.view.AutoCompleteTextViewFontLight
                    android:id="@+id/autocompletetextview_street_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@color/bg_edit_text"
                    android:hint="@string/street_1"
                    android:inputType="textNoSuggestions"
                    android:nextFocusDown="@+id/edittext_street_2"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:singleLine="true"
                    android:textColor="#595d66"
                    android:textColorHint="#b3b3b3"
                    android:textSize="@dimen/text_size_normal" />

                <ProgressBar
                    android:id="@+id/progressbar_street_1"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:visibility="invisible" />
            </RelativeLayout>

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_street_2"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:hint="@string/street_2"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/edittext_zip_code"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.AutoCompleteTextViewFont
                android:id="@+id/edittext_zip_code"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:completionThreshold="1"
                android:dropDownHeight="wrap_content"
                android:dropDownVerticalOffset="0dp"
                android:hint="@string/zip_code"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusDown="@+id/edittext_city"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_city"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:hint="@string/city"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/edittext_state"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.AutoCompleteTextViewFont
                android:id="@+id/edittext_state"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:completionThreshold="1"
                android:dropDownHeight="120dp"
                android:dropDownVerticalOffset="1dp"
                android:hint="@string/state_region_province"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/edittext_phone_num"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_phone_num"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:hint="@string/telephone_number"
                android:inputType="phone"
                android:nextFocusDown="@+id/edittext_email"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_email"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <print.io.view.EditTextFontLight
                android:id="@+id/edittext_country"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/bg_edit_text"
                android:ems="10"
                android:hint="@string/country"
                android:inputType="textCapWords"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="#595d66"
                android:textColorHint="#b3b3b3"
                android:textSize="@dimen/text_size_normal" />

            <!-- <requestFocus /> -->

            <print.io.view.ButtonFontLight
                android:id="@+id/button_save_address"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_margin="5dip"
                android:background="@drawable/btn_blue_light"
                android:gravity="center"
                android:onClick="onClickSaveAddress"
                android:text="@string/save_address"
                android:textColor="@color/primary_button_text"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/layout_address_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_address_type"
        android:visibility="gone" />

    <!-- Help -->

    <include
        android:id="@+id/item_help1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Address validation -->

    <include
        android:id="@+id/item_address_validation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_address_validation"
        android:visibility="gone" />

    <!-- Please try again dialog -->

    <include
        android:id="@+id/dialog_please_try_again"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/dialog_please_try_again"
        android:visibility="gone" />

    <!-- Help -->

    <include
        android:id="@+id/item_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_help"
        android:visibility="gone" />

    <!-- Coming Soon -->

    <include
        android:id="@+id/item_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/item_coming_soon"
        android:visibility="gone" />

</RelativeLayout>